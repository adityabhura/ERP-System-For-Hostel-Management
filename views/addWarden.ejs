<!doctype html>
<html lang="pt-br">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css"
        integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <link rel="stylesheet" href="style.css">
</head>

<style>
    body {
    background-color: #eee!important;
}

.login {
    background-color: #fff;
    width: 40%;
    margin: 80px auto;
    border-radius: 10px;
    padding: 20px;
    /* border-left: 5px solid #009688; */
    box-shadow: 0px 0px 0px 0px #3f51b5;
}

.login>.row>h2 {
    margin: auto;
}

.btn-form {
    width: 100%;
    margin-top: 20px;
}
</style>

<body>
    <div class="container">
        <form action="/addWarden/<%=hostel._id%>" method="post">
        <div class="login">
            <div class="row">
                <h2>Add Warden</h2>
                <div class="col-md-12">
                    Name:<input type="text" class="form-control" name="name" placeholder="name">
                    Username:<input type="text" class="form-control" name="username" placeholder="username" value="warden@<%=hostel.number%>" readonly>
                    Password:<input type="password" class="form-control" name="password" placeholder="password">
                    Email:<input type="email" class="form-control" name="email" placeholder="Email">
                    Phone no.:<input type="number" class="form-control" name="mobileNo" placeholder="Mobile Number">
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <input type="reset" id="reset" value="Reset" class="btn btn-outline-primary btn-form">
                </div>
                <div class="col-md-6">
                    <input type="submit" id="register" value="Add Warden" class="btn btn-outline-success btn-form">
                </div>
            </div>
            <br>
            <div class="row">
                <div class="col-md-12"><center><a href="/" style="text-decoration: none;">Go to Home Page</a></center></div>
            </div>
        </div>
        </form>
    </div>
</body>
</html>


