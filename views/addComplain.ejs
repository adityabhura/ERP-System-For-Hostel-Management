<style>
        body {
    background-color: #eee!important;
}

.login {
    background-color: #fff;
    border-radius: 10px;
    padding: 10px;
    border: solid;
    border-color:#4CAF50 ;
    border-width: 2px;
    /* border-left: 5px solid #009688; */
    box-shadow: 0px 0px 0px 0px #3f51b5;
}

.login>.row>h2 {
    margin: auto;
}

.btn-form {
    width: 100%;
    margin-top: 20px;
}
</style>

<body>

    <section class="navigation">
        <div class="nav-container" style="max-width:95%;">
          <div class="brand" style="padding:0px">
            <a href="#" style="text-decoration: none;">Hostel Management System</a>
          </div>
          <nav>
            <div class="nav-mobile"><a id="nav-toggle" href="#!"><span></span></a></div>
          </nav>
        </div>
      </section>
      
      <div class="sidenav">
        <a href="/studentDashboard">Student's Dashboard</a>
        <a href="#" class="active">Register a Complaint</a>
        <a href="/myComplains">My complaints</a>
        <a href="/notice">Notice Board</a>
      </div>

    <main>
    <article style="max-width:90%;">
    <div class="container1">
        <h2>Complaint Registration</h2>

                <form action="/complain" method="post">
                <div class="login">
                    <div class="row">
                        <div class="col-md-12">
                            <label for="room"><b>Room Number:</b></label>
                            <input type="text" class="form-control"  name="room" id="room" placeholder="Room Number"></input>
        
                            <label for="type"><b>Complain Type:</b></label>
                            <select class="form-control"  name="type" id="type">
                                <option value="Inside">Inside Room</option>
                                <option value="Outside">Outside room/General complain</option>
                            </select>
        
                            <label for="problem"><b>Problem:</b></label>
                            <select class="form-control" name="problem" id="problem">
                                <option value="Furniture">Furniture</option>
                                <option value="Electricity">Electricity</option>
                                <option value="LAN">LAN</option>
                                <option value="Doors and Windows">Doors and Windows</option>
                                <option value="Others">Others</option>
                            </select>
        
                            <label for="description"><b>Description: </b></label>
                            <textarea class="form-control" name="description" id="description" placeholder="Problem Description" style="width:100%;height:15%"></textarea>
        
                            <label for="contact"><b>Contact Number:</b></label>
                            <input class="form-control" type="number" name="contact" placeholder="Contact Number" id="contact" value="<%= currentUser.mobileNo %>">
            
                            <label for="email"><b>Email:</b></label>
                            <input class="form-control" type="email" name="email" placeholder="Email" id="email" value="<%= currentUser.instituteEmail %>"><br>
        
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <input type="reset" id="reset" value="Reset" class="btn btn-outline-primary btn-form">
                        </div>
                        <div class="col-md-6">
                            <input type="submit" id="register" value="Add complaint" class="btn btn-outline-success btn-form">
                        </div>
                    </div>
                    <br>
                </div>
                </form>
    </div>
    </article>
    </main>
</body>
</html>

