<%= currentUser %>
<h2>Complain Page</h2>
<form action="/complain" method="POST">

    <label for="room">Room Number:</label>
    <input type="text" name="room" id="room"></input><br>

    <label for="type">Complain Type:</label>
    <select name="type" id="type">
        <option value="inside">Inside Room</option>
        <option value="outside">Outside room/General complain</option>
    </select><br><br>

    <label for="problem">Problem:</label>
    <select name="problem" id="problem">
        <option value="Furniture">Furniture</option>
        <option value="Electricity">Electricity</option>
        <option value="LAN">LAN</option>
        <option value="Doors and Windows">Doors and Windows</option>
        <option value="Others">Others</option>
    </select><br><br>

    <label for="description">Description: </label>
    <textarea name="description" id="description"></textarea><br><br>

    <label for="contact">Contact Number: </label>
    <input type="number" name="contact" placeholder="Contact Number" id="contact"><br><br>
    
    <label for="email">Email: </label>
    <input type="email" name="email" placeholder="Email" id="email"><br><br>

    <input type="submit">
</form>

<script>
    const typeSelect=document.getElementById("type");
    const problem=document.getElementById("problem");
    typeSelect.addEventListener('change',(e)=>{
        const value = e.target.value;
        if(value==="outside"){
            problem.options[0].value="Cleanliness";
            problem.options[0].innerHTML="Cleaniness";
            problem.options[1].value="Toilets/Washrooms/Bathrooms";
            problem.options[1].innerHTML="Toilets/Wsshrooms/Bathrooms";
            problem.options[2].value="Mess Food";
            problem.options[2].innerHTML="Mess Food";
            problem.options[3].value="Water filters";
            problem.options[3].innerHTML="Water filters";
            problem.options[4].value="Others";
            problem.options[4].innerHTML="Others";
        }else{
            problem.options[0].value="Furniture";
            problem.options[0].innerHTML="Furniture";
            problem.options[1].value="Electricity";
            problem.options[1].innerHTML="Electricity";
            problem.options[2].value="LAN";
            problem.options[2].innerHTML="LAN";
            problem.options[3].value="Doors and Windows";
            problem.options[3].innerHTML="Doors and Windows";
            problem.options[4].value="Others";
            problem.options[4].innerHTML="Others";
        }
    })
</script>