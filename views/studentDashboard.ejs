    <h2>Student's Dashboard</h2>
    <div class="student-profile py-4">
      <div class="container1">
        <div class="row">
          <div class="col-lg-4">
            <div class="card shadow-sm">
              <div class="card-header bg-transparent text-center">
                <img class="profile_img" src="default-profile-photo.jpg" alt="student dp">
                <h3><%=currentUser.name%></h3>
              </div>
              <div class="card-body">
                <% const d = new Date(); %>
                <% let year = d.getFullYear();%>
                <p class="mb-0"><strong class="pr-1">Scholar ID: </strong><%= currentUser.scholarId %></p>
                <p class="mb-0"><strong class="pr-1">Batch:</strong>Batch of <%= currentUser.batch %></p>
                <p class="mb-0"><strong class="pr-1">Course:</strong><%= currentUser.course %></p>
                <p class="mb-0"><strong class="pr-1">Branch:</strong><%= currentUser.branch %></p>
              </div>
            </div>
          </div>
          <div class="col-lg-8">
            <div class="card shadow-sm">
              <div class="card-header bg-transparent border-0">
                <h3 class="mb-0"><i class="far fa-clone pr-1"></i>General Information</h3>
              </div>
              <div class="card-body pt-0">
                <table class="table table-bordered">
                  <tr>
                    <th width="30%">Scholar ID</th>
                    <td width="2%">:</td>
                    <td><%= currentUser.scholarId %></td>
                  </tr>
                  <tr>
                    <th width="30%">Gender</th>
                    <td width="2%">:</td>
                    <td>Male</td>
                  </tr>
                  <tr>
                    <th width="30%">Institute Email</th>
                    <td width="2%">:</td>
                    <td><%= currentUser.instituteEmail %></td>
                  </tr>
                  <tr>
                    <th width="30%">Personal Email:</th>
                    <td width="2%">:</td>
                    <td><%= currentUser.personalEmail %></td>
                  </tr>
                  <tr>
                    <th width="30%">Mobile Number:</th>
                    <td width="2%">:</td>
                    <td><%= currentUser.mobileNo %></td>
                  </tr>
                  <tr>
                    <th width="30%">Address:</th>
                    <td width="2%">:</td>
                    <td><%= currentUser.address %>, <%= currentUser.City %>, <%= currentUser.State %>, <%= currentUser.Country%>, Pin:<%= currentUser.Pin %></td>
                  </tr>
                  <tr>
                    <th width="30%">State:</th>
                    <td width="2%">:</td>
                    <td><%= currentUser.State %></td>
                  </tr>
                  <tr>
                    <th width="30%">Country:</th>
                    <td width="2%">:</td>
                    <td><%= currentUser.Country %></td>
                  </tr>
                  <tr>
                    <th width="30%">Alloted Hostel Name:</th>
                    <td width="2%">:</td>
                    <% if(student.room.hostel!=null){ %>
                      <td><%= student.room.hostel.name %></td>
                    <% }else{ %>
                        Hostel not alloted
                    <% } %>
                  </tr>
                  <tr>
                    <th width="30%">Alloted Hostel Number:</th>
                    <td width="2%">:</td>
                    <% if(student.room.hostel!=null){ %>
                      <td><%= student.room.hostel.number %></td>
                    <% }else{ %>
                        Hostel not alloted
                    <% } %>
                  </tr>
                  <tr>
                    <th width="30%">Alloted Room Number:</th>
                    <td width="2%">:</td>
                    <% if(student.room.roomNo!=null){ %>
                      <td><%= student.room.roomNo %></td>
                    <% }else{ %>
                       <td>Room not alloted</td> 
                    <% } %>
                  </tr>
                </table>
              </div>
            </div>
              <div style="height: 26px"></div>
            <div class="card shadow-sm">
              <div class="card-body pt-0">
                  <b>If there is any mistake in the details contact the Hostel Administration or Collage Admin</b>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
</article>
</main>


<script>
  // Get all links inside the side navigation menu
  var sidenavLinks = document.querySelectorAll('.sidenav a');
  
  // Loop through each link and add an event listener
  sidenavLinks.forEach(function(link) {
  link.addEventListener('click', function() {
  // Remove the 'active' class from all links
  sidenavLinks.forEach(function(link) {
  link.classList.remove('active');
  });
  
  // Add the 'active' class to the clicked link
  this.classList.add('active');
  });
  });
  </script>
