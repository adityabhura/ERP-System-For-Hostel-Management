    <div class="container1">
        <form action="/studentRegister" method="post">
        <div class="login">
            <div class="row">
                <h2>Student Registration</h2>
                <div class="col-md-12">
                    <label for="name">Name</label>
                    <input type="text" class="form-control" id="name" placeholder="Name" name="name">
                    <label for="password">Password</label>
                    <input type="password" class="form-control" id="password" placeholder="Ex. A123@paswod" name="password">
                    <label for="batch">Batch</label>
                    <select class="form-control" name="batch" placeholder="Batch (Passout Year)" id="batch">
                        <option value=2023>2023</option>
                        <option value=2024>2024</option>
                        <option value=2025>2026</option>
                        <option value=2026>2026</option>
                    </select>
                    <label for="course">Course</label>
                    <select class="form-control" name="course" placeholder="Course" id="course">
                        <option value="B.Tech">B.Tech</option>
                        <option value="M.Tech">M.Tech</option>
                        <option value="PHD">PHD</option>
                    </select>
                    <label for="Branch">Branch</label>
                    <select class="form-control" name="branch" placeholder="branch" id="branch">
                        <option value="CE">CE</option>
                        <option value="CSE">CSE</option>
                        <option value="EE">EE</option>
                        <option value="ECE">ECE</option>
                        <option value="EIE">EIE</option>
                        <option value="ME">ME</option>
                    </select>
                    <label for="scholarId">Scholar ID</label>
                    <input type="number" class="form-control" name="scholarId" placeholder="Scholar Id">
                    <label for="instituteEmail">Institute Email</label>
                    <input type="email" class="form-control" name="instituteEmail" placeholder="Institute Email">
                    <label for="personalEmail">Personal Email</label>
                    <input type="email" class="form-control" name="personalEmail" placeholder="Personal Email">
                    <label for="mobileNo">Mobile No.</label>
                    <input type="number" class="form-control" name="mobileNo" placeholder="Mobile No.">
                    <label for="address">Address</label>
                    <input type="text" class="form-control" id="address" placeholder="Address" name="address">
                    <label for="city">City</label>
                    <input type="text" class="form-control" name="City" placeholder="City" id="city">
                    <label for="state">State</label>
                    <input type="text" class="form-control" name="State" placeholder="State" id="state">
                    <label for="country">Country</label>
                    <input type="text" class="form-control" name="Country" placeholder="Country" id="country">
                    <label for="pin">Pin</label>
                    <input type="number" class="form-control" name="Pin" placeholder="Pin" id="pin">
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <input type="reset" id="reset" value="Reset" class="btn btn-outline-primary btn-form">
                </div>
                <div class="col-md-6">
                    <input type="submit" id="register" value="Register" class="btn btn-outline-success btn-form">
                        </div>
            </div>
            <br>
            <div class="row">
                <div class="col-md-12"><center><a href="/" style="text-decoration: none;">Go to Home Page</a></center></div>
            </div>
        </div>
